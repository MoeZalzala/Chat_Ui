<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/long_message_width"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/sender_message_bg"
        android:drawableRight="@drawable/ic_baseline_check_24"
        android:drawableTint="@color/white"
        android:padding="@dimen/messagePadding"
        android:text="@string/string1"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:30"
            android:layout_gravity="right"
            android:layout_margin="@dimen/default_margin"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/default_margin"
            android:padding="@dimen/messagePadding"
            android:background="@drawable/sender_message_bg"
            android:text="@string/string2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize"
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:drawableTint="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:31"
            android:layout_gravity="right"
            android:layout_margin="@dimen/default_margin"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="@dimen/long_message_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/default_margin"
            android:padding="@dimen/messagePadding"
            android:textColor="@color/black"
            android:background="@drawable/received_message_bg"
            android:text="@string/string3"
            android:textSize="@dimen/textSize"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:32"
            android:layout_gravity="left"
            android:layout_margin="@dimen/default_margin"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/default_margin"
            android:padding="@dimen/messagePadding"
            android:background="@drawable/sender_message_bg"
            android:text="@string/String4"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize"
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:drawableTint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:33"
            android:layout_gravity="right"
            android:layout_margin="@dimen/default_margin"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/black"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:contentDescription="emoji"
            android:src="@drawable/ic_baseline_tag_faces_24" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:contentDescription="voice record"
            android:src="@drawable/ic_baseline_mic_none_24" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:contentDescription="upload"
            android:src="@drawable/ic_baseline_arrow_upward_24" />

    </LinearLayout>

</LinearLayout>


